extends layout

block content

  .row
    .large-4.columns.text-left
      h1 {{film_name}}

  .row
    .large-4.columns
      .poster
        img(src={{movie_poster_link}})
      h5 Bechdel Test: {{pass/fail}}
      h5 Bechdel Score: {{score}}

    .large-4.columns
        p
          |{{Film Description}}
        p
          |Director: {{director}}
          |Writers: {{writers}}
          |Stars: {{stars}}
        p
          |Genre: {{Genre}}
        p
          |Box Office:
          |Budget: {{budget}}
          |Opening Weekend:  {{opening_weekend}}
          |Gross: {{gross}}

    .large-4.columns
      iframe(width="100%", height="100%", src="https://www.youtube.com/embed/ZBvK6ni97W8", frameborder="0", allowfullscreen="")
      p
        a(href={{IMDB_link}}) IMDB Page
      p
        a(href={{bechdeltest_link}}) bechdeltest.com Page

  .row
    .large-4.columns
      p.text-center
        |Number of scenes that passed the Bechdel Test
      div#passedBechdelDonut.chart

    .large-4.columns
      p.text-center
        |Characters with dialogue
      div#charWithDialogueDonut.chart

    .large-4.columns
      p.text-center
        |Total lines of dialogue
      div#totalLinesDialogueDonut.chart

  script(src="/js/graph.js")